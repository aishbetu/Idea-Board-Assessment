# Example environment variables for local development
# Copy this file to `.env` and fill any secrets. Do NOT commit `.env`.

# Postgres (db service)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=idea_board_db

# Prisma / Backend
# Use the docker-compose service hostname `db` when running in Docker
DATABASE_URL=postgres://postgres:postgres@db:5432/idea_board_db

# Backend runtime
PORT=8000
NODE_ENV=development
LOG_LEVEL=info

# CORS (optional for dev). Leave unset or set to '*' to allow all origins.
# CORS_ORIGIN=http://localhost:3000
# CORS_ALLOW_CREDENTIALS=false

# Frontend (Next.js) - build-time variable
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
